{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for MD.AI",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-create",
    "fs:allow-copy-file",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-read-dir",
    {
      "identifier": "fs:scope",
      "allow": [
        "**",
        "$HOME/**",
        "$DOCUMENT/**",
        "$DESKTOP/**",
        "$DOWNLOAD/**",
        "$APP/**",
        "$APPDATA/**",
        "$APPCONFIG/**",
        "$APPLOCALDATA/**",
        "$APPCACHE/**",
        "$APPLOG/**",
        "$TEMP/**",
        "$RESOURCE/**",
        "/Users/**",
        "/Volumes/**",
        "/tmp/**"
      ]
    },
    
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm"
  ]
}
